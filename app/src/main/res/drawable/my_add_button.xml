<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#00a78e" />
            <stroke android:width="2dp" android:color="#00a0af" />
            <corners android:radius="2dp" />
            <size android:height="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#00a78e" android:startColor="#00a78e" />
            <stroke android:width="1dp" android:color="#00a0af" />
            <corners android:radius="2dp" />
            <size android:height="20dp" />
        </shape>
    </item>
</selector>